kafka topcis{
    samples-json = topik zawierający podstawowe informacje o próbkach
    logs = topik na logi
    signature-count = zliczanie ilości próbek o danej syganturze w oknie czasu
    filetype-count = zliczanie ilości próbek o danej typie pliku w oknie czasu
}

hdfs {
    utrwalenie próbek
    /filetype/signature/hash
}

cassandra{
    przechowuje base64 zakodowane pliki
}

mongo{
    peframe{
        zawiera jsony zawierające wyniki analizy statycznej próbek
    }
    kafka{
        zawiera zliczenia ilości próbek o danej sygnaturze/typie pliku w oknach czasu
    }
}

elasticsearch{
    utrwalenie logów z systemu (topik logs z kafki)
}

neo4j{
    powiązania pomiędzy próbkami na podstawie wyników z analizy statycznej przechowywanych w mongo
}

